def seller(event=''):
    top = Toplevel()
    top.title("seller")
    top.geometry("1250x850")
    m=Label(top,text=' [ ~~ Enter the Value ~~  ]',font=("times new roman",18,"bold"),fg="red",bg="yellow")
    m.pack(padx=15,pady=25,fill="both")

    namevar=StringVar()
    nameentrybox=Entry(top,width=33,textvariable=namevar,fg="green")
    nameentrybox.pack(padx=15,pady=15)

    nameentrybox.focus()

    m=Label(top,text=' [  Select qunties  ]',font=("times new roman",15,"bold"),fg="red",bg="light steel blue")
    m.pack(padx=15,pady=25,fill="both")
    gendervar=StringVar()
    gendercombobox = ttk.Combobox(top,width=33 ,textvariable = gendervar,text="enter ",state='readonly')
    gendercombobox.pack(padx=15,pady=15)
    gendercombobox['values']=('KG','QUINTAL','TON')
    
    gendercombobox.get()
    m=Label(top,text='[ ***  payment proccess ***]',font=("times new roman",15,"bold"),fg="green",bg="light steel blue")
    m.pack(padx=15,pady=15)

    gendervar1=StringVar()
    gendercombobox1 = ttk.Combobox(top,width=33 ,textvariable = gendervar1,state='readonly')
    gendercombobox1.pack(padx=15,pady=15)
    gendercombobox1['values']=('Cash','Check','Online')
    
    gendercombobox1.get()
    
  
    button1 = Button(top,text="[Get calint Details ]",font=("times new roman",16),fg="green",bg="light steel blue",command=details)
    button1.pack(padx=15,pady=15)
    button2 = Button(top,text="[****** exit*****]",font=("times new roman",16),fg="red",bg="light steel blue",command=top.destroy)
    button2.pack(padx=15,pady=15)
    #m=Label(top,text='ddddd')
    #m.pack()
    top.configure(background="light steel blue")
    top.geometry("1250x850")
    
    
