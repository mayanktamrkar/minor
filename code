def Register(event=""):

    top = Toplevel()
    top.title("register")
    top.configure(background="sky blue1") 
    top.geometry("1250x850")
    namelabel=Label(top,text='Enter your name :',bg="sky blue1")
    namelabel.grid(row=0,column=0)
    namelabel.configure(foreground='Blue')
    namelabel.configure(font=("times new roman",18,"bold"))

    fathernamelabel=Label(top,text='Enter your father name :',bg="sky blue1")
    fathernamelabel.grid(row=1,column=0)
    fathernamelabel.configure(foreground='Blue')
    fathernamelabel.configure(font=("times new roman",18,"bold"))

    agelabel=Label(top,text='Enter your age :',bg="sky blue1")
    agelabel.grid(row=2,column=0)
    agelabel.configure(foreground='Blue')
    agelabel.configure(font=("times new roman",18,"bold"))
    
        

    
#entrbox
    namevar=StringVar()
    nameentrybox=Entry(top,width=15,textvariable=namevar,bg="sky blue1")   
    nameentrybox.grid(row=0,column=1)
    nameentrybox.focus()

    fathernamevar=StringVar()
    fathernameentrybox=Entry(top,width=15,textvariable=fathernamevar,bg="sky blue1")
    fathernameentrybox.grid(row=1,column=1)

    agevar=StringVar()
    ageentrybox=Entry(top,width=15,textvariable=agevar,bg="sky blue1")
    ageentrybox.grid(row=2,column=1)




#radio button
    usertype=StringVar()
    radiob1=Radiobutton(top,text='Farmer',value='student',variable=usertype,bg="light blue1")
    radiob1.grid(row=4,column=1)

